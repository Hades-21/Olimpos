---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div id="app" class="relative h-screen">
			<footer class="[grid-area:taskbar] min-h-[60px] bg-gray-500 z-10  fixed bottom-0  w-1/3 left-1/3 "></footer>
			<main class="[grid-area:main] ">
				<body class="bg-cover bg-center" style="background-image: url('https://mir-s3-cdn-cf.behance.net/project_modules/fs/da9c16117113967.607068e32a564.gif');">
			</main>
		</div>
		<slot />
	</body>
</html>

<style>
	#app{
	display: grid;
	grid-template-areas:
		"main main main"
		"taskbar taskbar taskbar";
	grid-template-rows: 1fr auto;
}


main {
	position: fixed
}

.bg-image {
	width: 100%;
	height: 100%;
	object-fit: cover;
	position: fixed;
	top: 0;
	left: 0;
	z-index: -1;
}

html {
	font-family: system-ui, sans-serif;
	background: #000;
}

	
</style>